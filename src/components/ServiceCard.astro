---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <h3 class="text-xl font-semibold mb-4">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>